name:                {{package}}
version:             0.0.0.1
synopsis:            Auto-generated API bindings for {{package}}
description:         Please see README.md
homepage:            https://github.com/swagger-api/swagger-codegen#readme
author:              Author Name Here
maintainer:          author.name@email.com
copyright:           YEAR - AUTHOR
category:            Web
build-type:          Simple
cabal-version:       >=2.0.0.0

library
  hs-source-dirs:      src
  main-is:             Main.hs
  exposed-modules:       {{title}}.API
                     , {{title}}.Types
  ghc-options:         -Wall
  build-depends:       base
                     , aeson
                     , aeson-compat
                     , time
                     , text
                     , bytestring
                     , utf8-string
                     , network-uri
                     , containers
                     , unordered-containers
                     , servant
                     , http-api-data
                     , servant-server
                     , servant-checked-exceptions
                     , servant
                     , warp
                     , wai
                     , transformers
                     , mtl
                     , http-types
  default-language:    Haskell2010

executable main
  main-is: Main.hs
  hs-source-dirs: app

  Build-depends:       base
                     , warp
                     , {{package}}

  default-language:
    Haskell2010

  ghc-options: -O2 -threaded -Wall -fwarn-tabs -fllvm -optlo-O3
